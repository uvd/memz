[
    {
      "name": "memz-postgres_${environment}",
      "image": "postgres:latest",
      "hostname": "postgres-${environment}.weave.local",
      "essential": true,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 5432
        }
      ],
      "environment": [
        {
          "Name": "WEAVE_CIDR",
          "Value": "net:${weave_cidr}"
        },
        {
          "Name" : "POSTGRES_USER",
          "Value": "${db_username}"
        },
        {
          "Name" : "POSTGRES_PASSWORD",
          "Value": "${db_password}"
        },
        {
          "Name" : "POSTGRES_DB",
          "Value": "${db_name}"
        }
      ]
    }
  ]